{
  "mainScreen": "profileScreen",
  "context": {
    "darkModeEnabled": false,
    "backgroundColorVar": "#FFFFFF",
    "advancedOptionsOn": true,
    "advancedOpacity": 1.0,
    "isAdvancedDisabled": false
  },
  "screens": [
    {
      "type": "screen",
      "id": "profileScreen",
      "navigationBar": {
        "title": "Perfil",
        "displayMode": "inline",
        "backgroundColor": "#F5F5F5",
        "foregroundColor": "#000000"
      },
      "body": [
        {
          "type": "vstack",
          "alignment": "center",
          "spacing": 4,
          "modifiers": [
            {
              "background": { "var": "backgroundColorVar" }
            }
          ],
          "children": [
            {
              "type": "image",
              "url": "https://i.pravatar.cc/150?u=bruno",
              "modifiers": [
                  {
                      "placeholder": {
                        "background": "#F8F8F8"
                      }
                  },
                {
                  "resizable": true
                },
                {
                  "scaledToFit": true
                },
                {
                  "cornerRadius": 60
                },
                {
                  "frame": {
                    "width": 100,
                    "height": 100
                  }
                }
              ]
            },
            {
              "type": "text",
              "value": "Bruno Martins",
              "modifiers": [
                {
                  "font": {
                    "style": "title",
                    "weight": "bold"
                  }
                },
                {
                  "foregroundColor": "#222222"
                }
              ]
            },
            {
              "type": "text",
              "value": "Desenvolvedor de apps bilionário",
              "modifiers": [
                {
                  "font": {
                    "style": "subheadline"
                  }
                },
                {
                  "foregroundColor": "#666666"
                }
              ]
            },
            {
              "type": "divider",
              "modifiers": [
                {
                  "padding": {
                    "top": 20,
                    "bottom": 20
                  }
                }
              ]
            },
            {
              "type": "toggle",
              "label": "Modo Escuro",
              "isOn": { "var": "darkModeEnabled" },
              "modifiers": [
                {
                   "padding": {
                    "leading": 30,
                    "trailing": 30
                  }
                }
               ],
              "onChange": {
                "if": {
                  "condition": { "var": "darkModeEnabled" },
                  "then": {
                    "setVariable": {
                      "name": "backgroundColorVar",
                      "value": "#000000"
                    }
                  },
                  "else": {
                    "setVariable": {
                      "name": "backgroundColorVar",
                      "value": "#FFFFFF"
                    }
                  }
                }
              }
            },
            {
              "type": "toggle",
              "label": "Opções Avançadas",
              "isOn": { "var": "advancedOptionsOn" },
              "modifiers": [
                { 
                  "padding": {
                    "top": 5,
                    "leading": 30,
                    "trailing": 30 
                  }
                },
                { "opacity": { "var": "advancedOpacity" } },
                { "disabled": { "var": "isAdvancedDisabled" } },
                { "frame": { "maxWidth": ".infinity" } }
              ],
              "onChange": {
                 "if": {
                   "condition": {"Operator.eq": [{ "var": "advancedOpacity" }, 1.0]},
                   "then": {"setVariable": {"name": "advancedOpacity", "value": 0.5}},
                   "else": {"setVariable": {"name": "advancedOpacity", "value": 1.0}}
                 }
              }
            },
            {
              "type": "vstack",
              "spacing": 0,
              "modifiers": [
                {
                  "padding": {
                    "top": 20,
                    "leading": 30,
                    "trailing": 30
                  }
                }
              ],
              "children": [
                {
                  "type": "button",
                  "children": [
                    {
                      "type": "text",
                      "value": "Editar Perfil",
                      "modifiers": [
                        {
                          "foreground": "#FFFFFF"
                        }
                      ]
                    }
                  ],
                  "modifiers": [
                    {
                      "frame": {
                        "maxWidth": ".infinity"
                      }
                    },
                    {
                      "padding": 14
                    },
                    {
                      "background": "blue"
                    },
                    {
                      "cornerRadius": 20
                    }
                  ]
                },
                {
                  "type": "button",
                  "title": "Configurações",
                  "onTap": {
                    "print": "settings-tap"
                  },
                  "modifiers": [
                    {
                      "padding": 14
                    },
                    {
                      "frame": {
                        "maxWidth": ".infinity"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
