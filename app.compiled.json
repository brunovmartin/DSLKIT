{
  "initialScreen": "main",
  "context": {
    "currentTheme": "light",
    "style": {
      "light": {
        "primaryColor": "blue",
        "secondaryColor": "gray",
        "backgroundColor": "#FFFFFF",
        "textColor": "#000000",
        "button":{
          "padding": 10,
          "cornerRadius": 8
        }
      },
      "dark": {
        "primaryColor": "lightblue",
        "secondaryColor": "darkgray",
        "backgroundColor": "#000000",
        "textColor": "#FFFFFF",
         "button":{
           "padding": 12,
           "cornerRadius": 5
        }
      }
    },
    "profileScreen": {
        "title": "Perfil Inicial"
    },
    "SettingsProfile": {
        "someOtherSetting": "valor exemplo"
    },
    "settingsCounter": 0
  },
  "screens": {
    "main": {
      "id": "main",
      "type": "VStack",
      "properties": {
        "alignment": "center",
        "spacing": 20
      },
      "children": [
        {
          "type": "Text",
          "properties": {
            "text": "Bem-vindo à Tela Principal"
          }
        },
        {
          "type": "Button",
          "properties": {
            "title": "Ir para Perfil",
            "action": {
              "navigate": "profile"
            }
          }
        },
        {
            "type": "Button",
            "properties": {
                "title": "Abrir Configurações",
                "action": {
                    "navigate": "settings"
                }
            }
        }
      ]
    },
    "profile": {
      "id": "profile",
      "type": "vstack",
      "properties": {
          "alignment": "center",
          "spacing": 15,
          "padding": 20
      },
      "children": [
        {
          "type": "text",
          "properties": {
              "text": { "var": "profileScreen.title" },
              "fontSize": 24,
              "fontWeight": "bold"
          },
           "modifiers": [ { "padding": { "bottom": 10 } } ]
        },
        {
          "type": "text",
          "properties": {
              "text": "Esta é a Tela de Perfil"
          }
        },
        {
           "type": "image",
           "properties": {
               "systemName": "person.circle.fill",
               "fontSize": 80,
               "color": "gray"
           }
        },
        {
            "type": "button",
            "properties": {
                "title": "Mudar Título da Tela",
                "action": {
                  "set": {
                    "var": "profileScreen.title",
                    "value": "Título Alterado!"
                   }
                }
            }
        },
        {
            "type": "button",
            "properties": {
                "title": "Voltar",
                "action": {
                  "dismiss": true
                }
            }
        }
      ]
    },
    "settings": {
        "id": "settings",
        "type": "vstack",
        "properties": {
            "spacing": 0
        },
        "children": [
             {
                "type": "hstack",
                "properties": {
                   "padding": {"top": 10, "horizontal": 15, "bottom": 5}
                },
                 "modifiers": [
                    {"frame": {"maxWidth": ".infinity"}},
                    {"background": {"var": "style[currentTheme].secondaryColor"}}
                ],
                "children": [
                     {
                        "type": "text",
                        "properties": {
                             "text": "Configurações (DSL)",
                             "fontSize": 18,
                             "fontWeight": "semibold",
                             "color": {"var": "style[currentTheme].textColor"} 
                        }
                    },
                     {
                        "type": "text",
                        "properties": {"text": ""},
                        "modifiers": [{"frame": {"maxWidth": ".infinity"}}]
                    }
                ]
            },
            {
                "type": "scrollview",
                "properties": {},
                "children": [
                    {
                        "type": "vstack",
                        "properties": {
                             "alignment": "leading",
                             "padding": 15,
                             "spacing": 10
                        },
                        "children": [
                             {
                                "type": "text",
                                "properties": { "text": "Contador", "fontWeight": "medium" }
                            },
                            {
                                "type": "hstack",
                                "properties": {
                                    "spacing": 10,
                                    "padding": {"vertical": 5}
                                },
                                "modifiers": [{"frame": {"maxWidth": ".infinity"}}],
                                "children": [
                                    {
                                        "type": "text",
                                        "properties": {"text": ""},
                                        "modifiers": [{"frame": {"maxWidth": ".infinity"}}]
                                    },
                                    {
                                        "type": "button",
                                        "properties": {
                                            "title": "-",
                                            "action": {
                                                "set": {
                                                    "var": "settingsCounter",
                                                    "value": { "op": "-", "lhs": { "var": "settingsCounter" }, "rhs": 1 }
                                                }
                                            }
                                        },
                                        "modifiers": [ { "padding": { "horizontal": 10 } } ]
                                    },
                                    {
                                        "type": "text",
                                        "properties": { "text": { "var": "settingsCounter" } }
                                    },
                                    {
                                        "type": "button",
                                        "properties": {
                                            "title": "+",
                                            "action": {
                                                "set": {
                                                    "var": "settingsCounter",
                                                    "value": { "op": "+", "lhs": { "var": "settingsCounter" }, "rhs": 1 }
                                                }
                                            }
                                        },
                                        "modifiers": [ { "padding": { "horizontal": 10 } } ]
                                    },
                                    {
                                        "type": "text",
                                        "properties": {"text": ""},
                                        "modifiers": [{"frame": {"maxWidth": ".infinity"}}]
                                    }
                                ]
                            },
                            {
                                "type": "divider"
                            },
                            {
                                "type": "text",
                                "properties": { "text": "Informação", "fontWeight": "medium", "padding": {"top": 10} }
                            },
                            {
                                "type": "text",
                                "properties": {
                                    "text": "Esta é a seção de configurações construída com componentes DSLKit."
                                }
                            },
                            {
                                "type": "divider"
                            },
                            {
                                "type": "button",
                                "properties": {
                                    "title": "Voltar para Principal",
                                    "action": { "dismiss": true }
                                },
                                "modifiers": [ { "padding": { "top": 20 } } ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
  }
} 